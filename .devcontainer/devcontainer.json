// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "${localWorkspaceFolderBasename}",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": { 
		"dockerfile": "Dockerfile",
    "args": {
			"USER": "ilude"
		}
	},
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"runArgs": ["--name", "${localWorkspaceFolderBasename}_devcontainer", "--hostname", "${localWorkspaceFolderBasename}","--gpus","all" ],
  "remoteUser": "ilude",
  "customizations": {
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        // Jupyter
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers",
        // VS Code specific
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "EditorConfig.EditorConfig",
        // Python specific
        "ms-python.python",
        "ms-python.black-formatter",
        // C++ specific
        "ms-vscode.cpptools",
        "twxs.cmake",
        // OpenCV specific
        "did1335.opencv-intellisense",
        "gsgupta.opencv-snippets",
        // Markdown specific
        "yzhang.markdown-all-in-one",
        // Spell Checker
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        // automatic activation of the selected python environment for the terminal = venv activate
        "python.terminal.activateEnvironment": true,
        // help vscode to find the python in our venv
        "python.defaultInterpreterPath": "/opt/venv/bin/python"
      }
    }
  },
  "mounts": [
    "source=${localEnv:USERPROFILE}/.ssh,target=/home/ilude/.ssh,type=bind,consistency=cached"
  ]

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

}
